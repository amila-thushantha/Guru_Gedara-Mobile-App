<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.DragFragment">

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="1."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="මගේ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/terget_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD700"
                android:fontFamily="@font/manameregular"
                android:gravity="center"
                android:padding="10dp"
                android:text="______"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="රවිඳු."
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="2."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="මගේ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/terget_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD700"
                android:fontFamily="@font/manameregular"
                android:gravity="center"
                android:padding="10dp"
                android:text="______"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="රවිඳු."
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="3."
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="මගේ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/terget_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFD700"
                android:fontFamily="@font/manameregular"
                android:gravity="center"
                android:padding="10dp"
                android:text="______"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/p_3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="රවිඳු."
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#8C8C8C"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <!-- Draggable Answer -->
            <TextView
                android:id="@+id/draggableText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ADD8E6"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="ගම"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/draggableText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#ADD8E6"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="වයස"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/draggableText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="#ADD8E6"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/manameregular"
                android:padding="10dp"
                android:text="නම"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>